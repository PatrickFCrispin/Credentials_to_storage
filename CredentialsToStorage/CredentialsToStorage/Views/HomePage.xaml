<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CredentialsToStorage.ViewModels"
             x:Class="CredentialsToStorage.Views.HomePage"
             x:DataType="vm:HomeViewModel"
             Title="{Binding Title}">
    
    <ContentPage.Content>
        <StackLayout Padding="10, 10" VerticalOptions="Center">
            <Label Text="Você está online!" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   Margin="0, 0, 0, 20"/>
            
            <Button Text="Sair" 
                    Clicked="Logout_Clicked" 
                    Margin="20, 10" 
                    Padding="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>